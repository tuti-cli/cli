{
    "name": "laravel-stack",
    "version": "1.0.0",
    "type": "php",
    "framework": "laravel",
    "description": "Test Laravel stack for testing",

    "metadata": {
        "maintainer": "tuti-cli",
        "php_version": "8.4"
    },

    "required_services": {
        "database": {
            "category": "databases",
            "options": ["postgres"],
            "default": "postgres"
        }
    },

    "optional_services": {
        "cache": {
            "category": "cache",
            "options": ["redis"],
            "default": "redis"
        },
        "workers": {
            "category": "workers",
            "options": ["scheduler", "horizon"],
            "default": null
        }
    },

    "environments": {
        "dev": {
            "app_replicas": 1
        }
    }
}
