{
  "permissions": {
    "allow": [
      "Bash(composer test)",
      "Bash(composer test:unit)",
      "Bash(composer test:types)",
      "Bash(composer test:lint)",
      "Bash(composer test:refactor)",
      "Bash(composer test:coverage)",
      "Bash(composer lint)",
      "Bash(composer refactor)",
      "Bash(make build-phar)",
      "Bash(make test-phar)",
      "Bash(make build-binary)",
      "Bash(make build-binary-linux)",
      "Bash(make build-binary-mac)",
      "Bash(make test-binary)",
      "Bash(make test-all)",
      "Bash(make install-local)",
      "Bash(php artisan *)",
      "Bash(./vendor/bin/pest *)",
      "Bash(./vendor/bin/phpstan *)",
      "Bash(./vendor/bin/pint *)",
      "Bash(./vendor/bin/rector *)",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(grep *)",
      "Bash(find app/*)",
      "Bash(find tests/*)",
      "Bash(find stubs/*)",
      "Bash(wc *)"
    ],
    "deny": [
      "Read(vendor/)",
      "Read(builds/)",
      "Read(builds/build/)",
      "Read(.git/)",
      "Read(.idea/)",
      "Read(.vscode/)",
      "Read(.tmp/)",
      "Read(.tuti/)",
      "Read(.phpunit.cache/)",
      "Read(storage/logs/)",
      "Read(database/database.sqlite)",
      "Read(composer.lock)",
      "Read(*.phar)",
      "Read(*.log)",
      "Read(.env)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-bash.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-output.sh"
          }
        ]
      }
    ]
  }
}
