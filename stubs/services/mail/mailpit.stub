mailpit:
  image: axllent/mailpit:{{MAILPIT_VERSION}}
  container_name: {{PROJECT_NAME}}_${APP_ENV:-dev}_mailpit
  networks:
    - {{NETWORK_NAME}}
  healthcheck:
    test: ["CMD", "wget", "--no-verbose", "--spider", "http://localhost:8025"]
    interval: 10s
    timeout: 3s
    retries: 3
    start_period: 5s
  {{DEPLOY_CONFIG}}
