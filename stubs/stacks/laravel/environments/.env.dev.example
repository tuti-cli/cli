# ============================================================================
# Laravel Application Environment
# ============================================================================
# This file is used by BOTH Laravel and Docker Compose.
# Place this file in your project root (same directory as artisan).
#
# Laravel reads this file for application configuration.
# Docker Compose reads this file for container configuration.
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=https://app.local.test

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

# ----------------------------------------------------------------------------
# Cache & Session
# ----------------------------------------------------------------------------
CACHE_STORE=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ----------------------------------------------------------------------------
# Redis Configuration
# ----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ----------------------------------------------------------------------------
# Mail Configuration (Mailpit in development)
# ----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ----------------------------------------------------------------------------
# Broadcasting, Queue, etc.
# ----------------------------------------------------------------------------
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=redis

# ----------------------------------------------------------------------------
# Development Tools
# ----------------------------------------------------------------------------
TELESCOPE_ENABLED=true
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ----------------------------------------------------------------------------
# Vite
# ----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"


# ============================================================================
# üê≥ TUTI-CLI DOCKER CONFIGURATION
# ============================================================================
# The following variables are used by Docker Compose for container setup.
# These are managed by tuti-cli and should not be changed manually unless
# you know what you're doing.
# ============================================================================

# ----------------------------------------------------------------------------
# Project Configuration
# ----------------------------------------------------------------------------
PROJECT_NAME=laravel
APP_DOMAIN=app.local.test

# ----------------------------------------------------------------------------
# Docker Build Configuration
# ----------------------------------------------------------------------------
PHP_VERSION=8.4
PHP_VARIANT=fpm-nginx
BUILD_TARGET=development

# Docker User/Group IDs (for Linux file permissions)
# Set these to match your host user: `id -u` and `id -g`
DOCKER_USER_ID=1000
DOCKER_GROUP_ID=1000
