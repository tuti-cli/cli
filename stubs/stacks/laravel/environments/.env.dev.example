# ============================================================================
# üê≥ TUTI-CLI DEVELOPMENT ENVIRONMENT
# ============================================================================
# This file contains ONLY tuti-cli specific variables and Docker service
# overrides. These values will be merged with Laravel's default .env.example
# when running `tuti install`.
#
# Standard Laravel variables (APP_NAME, LOG_*, etc.) are NOT duplicated here
# as they come from Laravel's .env.example file.
# ============================================================================

# ----------------------------------------------------------------------------
# Docker Service Hostnames (overrides for container networking)
# ----------------------------------------------------------------------------
# These override Laravel's default localhost values to use Docker service names

# Database - PostgreSQL container
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

# Mail - Mailpit container for development
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025

# ============================================================================
# üê≥ TUTI-CLI DOCKER CONFIGURATION
# ============================================================================
# The following variables are used by Docker Compose for container setup.
# These are managed by tuti-cli and should not be changed manually unless
# you know what you're doing.
# ============================================================================

# ----------------------------------------------------------------------------
# Project Configuration
# ----------------------------------------------------------------------------
PROJECT_NAME=laravel
APP_ENV=dev
APP_DOMAIN=app.local.test

# ----------------------------------------------------------------------------
# Docker Build Configuration
# ----------------------------------------------------------------------------
PHP_VERSION=8.4
PHP_VARIANT=fpm-nginx
BUILD_TARGET=development

# Docker User/Group IDs (for Linux file permissions)
# Set these to match your host user: `id -u` and `id -g`
DOCKER_USER_ID=1000
DOCKER_GROUP_ID=1000

# ----------------------------------------------------------------------------
# Service Versions
# ----------------------------------------------------------------------------
POSTGRES_VERSION=17

# ----------------------------------------------------------------------------
# External Port Mappings (for connecting from host machine)
# ----------------------------------------------------------------------------
# These ports are exposed to your local machine for debugging/development tools
DB_EXTERNAL_PORT=5432
